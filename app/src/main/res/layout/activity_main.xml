<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:padding="15dip"
    android:orientation="vertical"
    tools:context="com.example.sabri.project5.MainActivity">

    <Button
        android:id="@+id/add_one_egg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="add_one_egg"
        android:text="Add 1 Egg"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="148dp"
        />

    <Button
        android:id="@+id/add_two_eggs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Add 2 eggs"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="158dp"
        android:textSize="30sp"
        android:onClick="add_two_egg"
        />

    <Button
        android:id="@+id/subtract_one_egg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtract 1 Egg"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="242dp"
        android:textSize="30sp"
        android:onClick="subtract_one_egg"
        />

    <Button
        android:id="@+id/make_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make breakfast"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="148dp"
        android:textSize="30sp"
        android:onClick="make_breakfast"
        />
</LinearLayout>
